<Window x:Class="MediaMVP.StringDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaMVP"
        mc:Ignorable="d"
        Title="StringDialog" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter Extension. DONT FORGET THE .EXT!!!" />
            <TextBox x:Name="ResponseTextBox" KeyDown="ResponseTextBox_KeyDown"/>
            <Button Content="OK" Click="OKButton_Click" />
        </StackPanel>
    </Grid>
</Window>
